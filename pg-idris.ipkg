package pg-idris

sourcedir = "src"

modules = Postgres,
          Postgres.DB,
	  Postgres.DB.Core,
	  Postgres.DB.Wait,
	  Postgres.Data,
	  Postgres.Data.Conn,
	  Postgres.Data.ConnectionStatus,
	  Postgres.Data.ResultStatus,
	  Postgres.Exec,
          Postgres.Notification,
	  Postgres.Query,
	  Postgres.Result,
	  Postgres.Utility

opts = "-p contrib"

prebuild = "make -C pg-helpers"
postinstall = "make -C pg-helpers install"
postclean = "make -C pg-helpers clean"
